package centralApplication;

import java.time.LocalDate;
import java.time.LocalTime;

public interface TimeKeeperInterface {

	/**
	 * @return the current_Date_TimeKeeper
	 */
	LocalDate getCurrent_Date_TimeKeeper();

	/**
	 * @param current_Date_TimeKeeper the current Date to set
	 */
	void setCurrent_Date_TimeKeeper(LocalDate current_Date_TimeKeeper);

	/**
	 * @return the registered_rounded_time
	 */
	LocalTime getRegistered_rounded_time();

	/**
	 * @param registered_rounded_time the registered_rounded_time to set
	 */
	void setRegistered_rounded_time(LocalTime registered_rounded_time);

	/**
	 * @brief Update current date
	 */
	void updateCurrentDate();

	/**
	 * @return the id_Worker
	 */
	int getId_Worker();

	/**
	 * @param id_Worker the id_Worker to set
	 */
	void setId_Worker(int id_Worker);

}