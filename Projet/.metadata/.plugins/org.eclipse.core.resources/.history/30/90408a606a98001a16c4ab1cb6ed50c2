package TimeKeeperApplication;

import java.io.IOException;
import java.io.ObjectOutputStream;
import java.io.OutputStream;
import java.net.Socket;
import java.net.UnknownHostException;
import java.util.ArrayList;

public class DataTransferClient {

	private Socket socket;
	private OutputStream outputStream;
	ObjectOutputStream objectOutputStream 

	/**
	 * @param socket
	 */
	public DataTransferClient() {

	}

	public void connect() throws UnknownHostException, IOException {
		// need host and port, we want to connect to the ServerSocket at port 7777
		this.socket = new Socket("127.0.0.1", 7778);
		System.out.println("Connected!");
	}

	public void send() throws IOException {

		// get the output stream from the socket.
		OutputStream outputStream = socket.getOutputStream();
		// create an object output stream from the output stream so we can send an
		// object through it
		ObjectOutputStream objectOutputStream = new ObjectOutputStream(outputStream);

		// make a bunch of messages to send.
		ArrayList<String> messages = new ArrayList<>();
		messages.add(new String("Hello from the other side!"));
		messages.add(new String("How are you doing?"));
		messages.add(new String("What time is it?"));
		messages.add(new String("Hi hi hi hi."));

		System.out.println("Sending messages to the ServerSocket");
		objectOutputStream.writeObject(messages);

		System.out.println("Closing socket and terminating program.");
		socket.close();
	}

}
